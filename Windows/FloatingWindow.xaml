<Window x:Class="BingeBox_WPF.Windows.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingeBox_WPF.Windows"
        mc:Ignorable="d"
        AllowsTransparency="true"
        WindowStyle="None"
        Title="FloatingWindow" Height="100" Width="800">
    <Grid Background="#FFF0F0F0">
        <Grid x:Name="FS_ControlGrid" Background="Transparent" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <StackPanel Background="Transparent" x:Name="ControlPanel" Orientation="Vertical">
                <Slider Grid.Row="1" x:Name="TrackBar" Margin="10,5,10,0" Minimum="0"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PrevBtn" Content="⏮️" Width="30" Height="30" FontSize="18" Margin="5,15,5,10"/>
                    <Button x:Name="PlayBtn" Content="⏯️" Width="30" Height="30" FontSize="18" Margin="5,15,5,10"/>
                    <Button x:Name="NextBtn" Content="⏭️" Width="30" Height="30" FontSize="18" Margin="5,15,5,10"/>
                    <Button x:Name="FullScreenBtn" Content="⛶" Width="30" Height="30" FontSize="18" Margin="5,15,5,10"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
